<!-- tab-pane: profile -->
<div class="tab-pane active" id="profile">
    <!-- form profile -->
	
    <%= form_for @user, :html => {:class => "panel form-horizontal form-bordered"} do |f| %>
        <div class="panel-body pt0 pb0">
            <div class="form-group header bgcolor-default">
                <div class="col-md-12">
					
                    <h4 class="semibold text-primary mt0 mb5">Charterholder Profile</h4>
                    <p class="text-default nm">This information appears on your public profile, search results, and beyond.</p>
                </div>
            </div>
            <div class="form-group">
				<%= f.fields_for :user_profile_pictures, :html => {:multipart => true} do |builder| %>
                <label class="col-sm-3 control-label">Photo</label>
                <div class="col-sm-9">
                    <div class="btn-group pr5">
                        <img class="img-circle img-bordered" src="<%= @user.avatar %>" alt="" width="34px">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default">Change photo</button>
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
						<%= builder.file_field :photo %>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Upload photo</a></li>
                            <li><a href="#">Remove</a></li>
                        </ul>
                    </div>
                </div>
            </div>
			<% end %>
            <div class="form-group">
                <label class="col-sm-3 control-label">Name</label>
           
                <div class="col-sm-6">
					<%#= f.text_field :prefix, class: "form-control", placeholder: "Prefix (i.e. Mr)" %>
					<%= f.text_field :first_name, class: "form-control", placeholder: "First name." %>
					<br>
					
					<%= f.text_field :middle_name, class: "form-control", placeholder: "middle name." %>
					<br>
					<%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
					<br>
					<%= f.text_field :suffix, class: "form-control col-md-4", placeholder: "Suffix" %>
                </div>
            </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Email</label>
             <div class="col-sm-6">
				<%= f.email_field :email, class: "form-control", placeholder: "name@domain.com"  %>
             </div>
         </div>
		 <%= f.fields_for :user_detail, @user_detail do |builder| %>
         <div class="form-group">
             <label class="col-sm-3 control-label">Title</label>
             <div class="col-sm-6">
                <%= builder.text_field :title, class: "form-control"  %>
             </div>
         </div>
          
          <div class="form-group">
             <label class="col-sm-3 control-label">Company</label>
             <div class="col-sm-6">
				<%= builder.text_field :company, class: "form-control"  %>
                 
             </div>
         </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">City</label>
                <div class="col-sm-6">
                    <%= builder.select(:city, ["Select Location", User.cities_list.sort, ], {}, {:class => 'form-control'}) %>
                    <!-- <select class="form-control" name="language">
                        <option>Select Language...</option>
                        <option value="eu">Basque - Euskara (beta)</option>
                        <option value="ca">Catalan - català (beta)</option>
                        <option value="sv">Swedish - Svenska</option>
                        <option value="tr">Turkish - Türkçe</option>
                        <option value="uk">Ukrainian - Українська мова (beta)</option>
                    </select> -->
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-3 control-label">Twitter</label>
                <div class="col-sm-6">
					<%= builder.text_field :twitter, class: "form-control"  %>
                    
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Instagram</label>
                <div class="col-sm-6">
					<%= builder.text_field :instagram, class: "form-control"  %>
                    
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Facebook</label>
                <div class="col-sm-6">
					<%= builder.text_field :facebook, class: "form-control"  %>
                </div>
            </div>
			<% end %>
          
            
            <div class="form-group header bgcolor-default">
                <div class="col-md-12">
                    <h4 class="semibold text-primary nm">LinkedIn</h4>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">&nbsp;</label>
                <div class="col-sm-9">
                    <div class="btn-group pr5">
                        <img class="img-circle img-bordered" src="<%= @user.avatar %>" alt="" width="34px">
                    </div>
                    <a href="javascript:void(0);" class="btn btn-facebook">Connect to LinkedIn</a>
                    <p class="help-block">to manage your connection with Facebook.</p>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button type="reset" class="btn btn-default">Reset</button>
			<%= f.submit "Save changes", class: "btn btn-primary" %>
            
        </div>
    </form>
	<% end %>
    <!--/ form profile -->
</div>
<!--/ tab-pane: profile -->
