
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>

    <%= render 'shared/backend_head' %>

    <body>

        <%= render 'shared/header_member' %>

        <!-- START Template Main -->
        <section id="main" role="main">
           
           <%= render 'user_info_header_edit'%>

            <section id="members" class="section" style="min-height: 700px; position: relative; background: #fff;">
                <div class="overlay light pattern pattern13"></div>
                <!-- START Template Container -->
                <div class="container">
                
                <div class="col-md-10 col-md-offset-1">
                    <!-- START Row -->
                    <div class="row">
                        <!-- Left Side / Top side -->
                        <div class="col-md-4">
                            <div class="text-left">
								<%= image_tag @user.avatar, class: "img-circle img-bordered", style: "margin-top: -100px; z-index: 999; position: relative;", width: "180px", height: "180px"  %>
                            </div>
                            <!--/ Right side / bottom side -->
                            <div class="col-md-9">
                                <!-- START Tab-content -->
                                <div class="tab-content">
                                    <%= render "edit_profile_general_tab" %>

                                    <%= render "edit_profile_resume_tab" %>

                                    <%= render "edit_profile_change_password_tab" %>
                                </div>

                            </div>
                            
                            <!--/ END Row -->
                        </div>
                    </div>
                    <!-- START To Top Scroller -->
                    <a href="#" class="totop animation" data-toggle="waypoints totop" data-showanim="bounceIn" data-hideanim="bounceOut" data-offset="50%"><i class="ico-angle-up"></i></a>
                </div><!--/ END Template Container -->
                <!--/ END To Top Scroller -->
            </section>

            <%= render 'footer'%>
            
        </section>
        <!--/ END Template Main -->

        <%= render "shared/js" %>

