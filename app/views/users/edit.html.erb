<%= render 'shared/backend_head' %>

<%= render 'header'%>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>


           
        <!-- START Template Main -->
        <section id="main" role="main">
            <section class="jumbotron jumbotron-bg3 nm" data-stellar-background-ratio="0.4" style="min-height:200px; z-index: -1;">
                <!-- pattern + overlay -->
                <div class="overlay pattern pattern10"></div>
                <!--/ pattern + overlay -->
            </section>
            <!--/ END jumbotron -->


            <!-- START Template Container -->
            <div class="container">
                
                <div class="col-md-10 col-md-offset-1">
                    <!-- START Row -->
                    <div class="row">
                        <!-- Left Side / Top side -->
                        <div class="col-md-4">
                            <div class="text-left">
                                <img class="img-circle img-bordered" src="<%= @user.avatar %>" alt="" style="margin-top: -100px; z-index: 999; position: relative;" width="180px" height="180px">
                            </div>



                            <h3 class="text-left"><%= @user.full_name %></h3>
                            <h4 class="thin text-left"><%= @user.company_and_title %></h4>

                            <br>

                            <!-- figure with progress -->
                            <ul class="list-table bgcolor-white panel">
                                <li class="text-left">
                                    <div class="panel-body">
                                        <div class="progress progress-lg mb5">
                                            <div class="progress-bar progress-bar-warning" style="width:70%"></div>
                                        </div>
                                        <p class="clearfix nm">
                                            <span class="pull-left bold">Profile complete</span>
                                            <span class="pull-right bold">70%</span>
                                        </p>
                                    </div>
                                </li>
                            </ul>
                            <!--/ figure with progress -->

                            <hr><!-- horizontal line -->

                            <!-- tab menu -->
                            <ul class="list-group list-group-tabs">
                                <li class="list-group-item active"><a href="#profile" data-toggle="tab"><i class="ico-user2 mr5"></i> Profile</a></li>
                                <li class="list-group-item"><a href="#account" data-toggle="tab"><i class="ico-list mr5"></i>Resume</a></li>
                                <li class="list-group-item"><a href="#password" data-toggle="tab"><i class="ico-lock mr5"></i> Password</a></li>
                            </ul>
                            <!-- tab menu -->
                        </div>
                        <!--/ Right side / bottom side -->
                        <div class="col-md-8">
                            <!-- START Tab-content -->
                            <div class="tab-content">
                                
                                <%= render "edit_profile_general_tab" %>

                                <%= render "edit_profile_resume_tab" %>

                                <%= render "edit_profile_change_password_tab" %>
                            </div>

                        </div>
                        
                        <!--/ END Row -->
                    </div>
                </div>
                <!-- START To Top Scroller -->
                <a href="#" class="totop animation" data-toggle="waypoints totop" data-showanim="bounceIn" data-hideanim="bounceOut" data-offset="50%"><i class="ico-angle-up"></i></a>
            </div><!--/ END Template Container -->
            <!--/ END To Top Scroller -->
        </section>
        
            <!--/ END Template Main -->

        <%= render "shared/js" %>

    </body>
    <!--/ END Body -->
</html>